// Typography
// $font-family-walsheimpro:           "GT Walsheim Pro", Helvetica, Arial, sans-serif !default;
// $font-family-minionpro:             "Minion Pro", Helvetica, Arial, sans-serif !default;

// $font-family-sans-serif =            "Helvetica Neue", Helvetica, Arial, sans-serif
$font-family-sans-serif =            'Open Sans', sans-serif
$font-family-serif =                 Georgia, "Times New Roman", Times, serif
$font-family-monospace =             Consolas, 'Liberation Mono', Courier, monospace
$font-family-base =                  $font-family-sans-serif

// Pixel value used to responsively scale all typography. Applied to the `<html>` element.
$font-size-root =                    18px

$font-size-base =                    1rem    // ставим этот размер для браузера

// 2rem   18px / $font-size-root = 1rem
// 2rem   15px / $font-size-root = 0.833333333333333rem
// 2rem   50px / $font-size-root = 2.7777777777777777rem
// 2rem   25px / $font-size-root = 1.3888888888888888rem
// 2px    2rem * $font-size-root = 36px

// $font-size-lg =                      1.111rem // 20px
// $font-size-sm =                      .888rem // 16px
// $font-size-xs =                      .777rem // 12px

// // Headings
// $font-size-h1 =                      3.333rem // 60px
// $font-size-h2 =                      2.222rem // 40px
// $font-size-h3 =                      1.777rem // 32px
// $font-size-h4 =                      1.222rem // 22px
// $font-size-h5 =                      1rem // 18px
// $font-size-h6 =                      .888rem // 16px

// $font-weight-base =                  300

// $line-height-base =                  1.4
$line-height-base =                     1.333   // в основном lh 20 px
// $line-height-sm =                    1.3
// $line-height-xs =                    1.2

$line-height-h1 =                    1
$line-height-h2 =                    1
$line-height-h3 =                    1
$line-height-h4 =                    1
$line-height-h5 =                    1
$line-height-h6 =                    1

