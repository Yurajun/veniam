.button
	padding 12px 18px
	display inline-block
	color colors('white')
	background-color colors('accent')
	border none
	border-radius 3px
	outline none
	+media-breakpoint-down('xs')
		padding-x(0)
		display block

	&_indent
		&_right-10
			margin-right 10px
			+media-breakpoint-down('xs')
				margin-right 0
		&_left-10
			margin-left 10px
			+media-breakpoint-down('xs')
				margin-left 0
		&_left-60
			margin-left 60px
			+media-breakpoint-down('xs')
				margin-left 0
		&_bottom-11
			+media-breakpoint-down('xs')
				margin-bottom 11px